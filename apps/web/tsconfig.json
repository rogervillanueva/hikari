{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/providers/*": [
        "./providers/*"
      ],
      "@/store/*": [
        "./store/*"
      ],
      "@/workers/*": [
        "./workers/*"
      ],
      "@/fixtures/*": [
        "./fixtures/*"
      ],
      "@/scripts/*": [
        "./scripts/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
